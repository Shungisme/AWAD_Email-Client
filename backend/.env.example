PORT=5000
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# Google OAuth2 Configuration
# Get these from https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback

# Gmail API Scopes (these are enabled in the OAuth consent screen)
# https://www.googleapis.com/auth/gmail.readonly - Read emails
# https://www.googleapis.com/auth/gmail.modify - Modify emails (mark read, delete, labels)
# https://www.googleapis.com/auth/gmail.send - Send emails
# https://www.googleapis.com/auth/gmail.labels - Manage labels

# Google Gemini API Configuration (for AI email summarization & semantic search embeddings)
# Get your API key from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_GEMINI_API_KEY_here

# MongoDB Configuration
# For local MongoDB: mongodb://localhost:27017/email-dashboard
# For MongoDB Atlas: mongodb+srv://<username>:<password>@cluster.mongodb.net/email-dashboard
MONGODB_URI=mongodb://localhost:27017/email-dashboard

NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# For Google Cloud Pub/Sub (used for Gmail push notifications)
GOOGLE_PROJECT_ID=your_google_project_id
GMAIL_TOPIC_NAME=your_gmail_topic_name
GMAIL_SUBSCRIPTION_NAME=your_gmail_subscription_name

# Google Cloud Service Account Key (JSON string)
# This will be populated from AWS Secrets Manager in production
# The deploy-app.sh script will fetch this from AWS Secrets Manager
# and write it to .env as a JSON string
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project",...}